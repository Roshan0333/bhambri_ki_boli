<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00374A"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bhambri Ki Boli "
        android:layout_marginTop="10dp"
        android:textSize="40sp"
        android:fontFamily="@font/pacifico_regular"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/vloumeon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#00374A"
        android:src="@drawable/volume_on"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/vloumeoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/volume_off"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        android:layout_marginTop="30dp"
        android:background="#00374A"
        tools:layout_editor_absoluteY="316dp"
        android:alpha="0"/>


    <ImageButton
        android:id="@+id/hatt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00374A"
        android:src="@drawable/off"
        app:layout_constraintEnd_toStartOf="@id/arre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vloumeoff"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hatt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text2"
        android:textColor="#B7FDFE"
        android:textSize="20sp"
        android:text="Haat BC"/>

    <ImageButton
        android:id="@+id/arre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00374A"
        android:src="@drawable/off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/hatt"
        app:layout_constraintTop_toBottomOf="@id/vloumeoff"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/arre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text1"
        android:textColor="#B7FDFE"
        android:textSize="20sp"
        android:text="      Arre Maa"/>


    <ImageButton
        android:id="@+id/chal_dk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00374A"
        android:src="@drawable/off"
        app:layout_constraintEnd_toStartOf="@id/arre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chal_dk"
        app:layout_constraintEnd_toStartOf="@+id/text4"
        android:text="Chal DK"
        android:textColor="#B7FDFE"
        android:textSize="20sp"/>

    <ImageButton
        android:id="@+id/apni_maa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00374A"
        android:src="@drawable/off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/chal_dk"
        app:layout_constraintTop_toBottomOf="@id/text2"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apni_maa"
        app:layout_constraintStart_toEndOf="@+id/text3"
        android:text="      Apni Maa"
        android:textColor="#B7FDFE"
        android:textSize="20sp"/>

    <ImageButton
        android:id="@+id/dk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00374A"
        android:src="@drawable/off"
        app:layout_constraintEnd_toStartOf="@id/neta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text3"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dk"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toStartOf="@+id/text6"
        android:textColor="#B7FDFE"
        android:textSize="20sp"
        android:text="DK MC BKL"/>

    <ImageButton
        android:id="@+id/neta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00374A"
        android:src="@drawable/off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dk"
        app:layout_constraintTop_toBottomOf="@id/text4"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/neta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text1"
        android:textColor="#B7FDFE"
        android:textSize="20sp"
        android:text="      Neta Neta"/>

    <!---Below code is for on -->

    <ImageButton
        android:id="@+id/hatt_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00374A"
        android:src="@drawable/on"
        app:layout_constraintEnd_toStartOf="@id/arre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vloumeoff"
        android:alpha="0"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/arre_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00374A"
        android:src="@drawable/on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/hatt"
        app:layout_constraintTop_toBottomOf="@id/vloumeoff"
        android:alpha="0"
        tools:ignore="SpeakableTextPresentCheck" />


    <ImageButton
        android:id="@+id/chal_dk_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00374A"
        android:src="@drawable/on"
        app:layout_constraintEnd_toStartOf="@id/arre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:alpha="0"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/apni_maa_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00374A"
        android:src="@drawable/on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/chal_dk"
        app:layout_constraintTop_toBottomOf="@id/text2"
        android:alpha="0"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/dk_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00374A"
        android:src="@drawable/on"
        app:layout_constraintEnd_toStartOf="@id/neta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text3"
        android:alpha="0"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/neta_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#00374A"
        android:src="@drawable/on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dk"
        app:layout_constraintTop_toBottomOf="@id/text4"
        android:alpha="0"
        tools:ignore="SpeakableTextPresentCheck" />


    <TextView
        android:id="@+id/down"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:text="       We're Working on More-Coming Soon!       "
        android:textColor="#B7FDFE"
        android:textSize="20sp"
        android:background="@drawable/shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>